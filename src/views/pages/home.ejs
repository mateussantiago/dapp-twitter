<%- contentFor('body') %>
<div class="col-sm-2 px-1 bg-dark min-vh-100">
    <div class="py-2 sticky-top flex-grow-1">
        <nav class="flex-sm-column">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">Dwitter</a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="/home">Home</a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="/profile">Profile</a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="/following">Following</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<div class="col" id="main">
    <div id="content">
        <div class="col" id="main">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <form class="form-inline my-2 my-lg-0" action="/searchUser" method="POST">
                                        <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search a user by address ou nickname" aria-label="Search">
                                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="container-fluid">
                <% for (tweet of tweets) { %>
                    <div class="container-fluid card card-outline-secondary my-4">
                        <div class="card-body">
                            <div class="media mb-4">
                                <div class="media-body">
                                    <p class="mt-0 user"> <%= tweet.user["nickname"] %>
                                    <br>
                                    <small class="text-muted"><%= tweet.user["id"] %></small>
                                    </p>
                                    <p class="mt-0 user"><%= tweet["tweet"] %></p>
                                    <br>
                                    <small class="text-muted"><%= new Date(tweet["publication_date"] * 1000) %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
