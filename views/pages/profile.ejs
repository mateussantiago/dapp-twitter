<%- contentFor('body') %>
<div id="content">
    <div class="container">
        <div class="container-fluid card my-4">
            <div class="card-body">
                <form action="publishTweet" method="post">
                    <div class="form-group">
                        <textarea class="form-control" id="textoDuvida" rows="3" placeholder="O que estÃ¡ acontecendo?" name="texto"></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">Publish</button>
                </form>
            </div>
        </div>
    </div>  
    <div class="container">
            <% for(tweet of feed) {%>
                <div class="container-fluid card card-outline-secondary my-4">
                    <div class="card-body">
                        <div class="media mb-4">
                            <div class="media-body">
                                <p class="mt-0 user"> <%= tweet.user["nickname"] %>
                                <br>
                                <small class="text-muted"><%= tweet.user["id"] %></small>
                                home                           </p>
                                <p class="mt-0 user"><%= tweet["tweet"] %></p>
                                <br>
                                <small class="text-muted"><%= new Date(tweet["publication_date"] * 1000) %></small>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
</div>
